<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
<context:component-scan base-package="{com.hcl.example7}"></context:component-scan>
<bean id="user" class="com.hcl.example7.User">
	<property name="name" value="Ramesh"></property>
	<property name="password" value="Ramesh123"></property>
</bean>
<bean id="box" class="com.hcl.example7.Box">
	<property name="breadth" value="10"></property>
	<property name="length" value="15"></property>
</bean>

</beans>
