<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">
<context:component-scan base-package="com.hcl.example6"></context:component-scan>
<bean id="address" class="com.hcl.example6.Address">
	<property name="line1" value="Akshaya Adora"></property>
	<property name="line2" value="PAdur"></property>
	<property name="city" value="Chennai"></property>
	<property name="pincode" value="222232"></property>
</bean>
<bean id="employee" class="com.hcl.example6.Employee">
	<property name="employeeName" value="Akshaya"></property>
	<property name="employeeMobile" value="622227332"></property>
	<property name="employeeEmail" value="Chennai123@chennai.com"></property>
	<property name="empSalary" value="2222"></property>
</bean>
</beans>
